@model FlightManagement.Data.Flight

@{
    ViewData["Title"] = "Add a new Flight";
}

<h1>Create</h1>

<h4>Flight</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FlightNumber" class="control-label">Flight Number</label>
                <input asp-for="FlightNumber" class="form-control" />
                <span asp-validation-for="FlightNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepartureDateTime" class="control-label">Departure Date Time</label>
                <input asp-for="DepartureDateTime" class="form-control" />
                <span asp-validation-for="DepartureDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ArrivalDateTime" class="control-label">Arrival Date Time</label>
                <input asp-for="ArrivalDateTime" class="form-control" />
                <span asp-validation-for="ArrivalDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepartureAirport" class="control-label">Departure Airport</label>
                <input asp-for="DepartureAirport" class="form-control" />
                <span asp-validation-for="DepartureAirport" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ArrivalAirport" class="control-label">Arrival Airport</label>
                <input asp-for="ArrivalAirport" class="form-control" />
                <span asp-validation-for="ArrivalAirport" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PassengerLimit" class="control-label">Passenger Limit</label>
                <input asp-for="PassengerLimit" class="form-control" />
                <span asp-validation-for="PassengerLimit" class="text-danger"></span>
            </div>
            <div style="margin-top:10px;" class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div style="margin-top:10px;">
    <a asp-action="Index">Cancel</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
